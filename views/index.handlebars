{{!-- <div class=layer> --}}

  {{!-- </div> --}}
<header>
  <h1>Eat Da Burger!</h1>
</header>
{{!-- <img id="header-background" /> --}}

<span class="description">Create and devour unique Burgers made by you!</span>

<main>

  <section id="add-a-burger">

    <h2>Add a Burger</h2>
    <div id="add-content">
      <div id="dissected-burger"></div>

      {{!-- <img id="dissected-burger" src="../public/assets/img/dissected_burger.png"
        alt="An image of a dissected Burger" /> --}}

      <form class="create-form">

        <div class="form-group">
          <h3>Name Your Burger:</h3>
          <hr>
          <input type="text" id="burger" name="burger_name" placeholder="burger name">
        </div>

        <div class="form-group">
          <h3>Choose your ingredients!</h3>
          <hr>
          <div id="ingredient-groups">

            <section class="ing-group">
              <h4>Bun:</h4>
              <div class="checkboxes">
                <label><input type="radio" name="bun-type" value="Sesame" checked> Sesame Bun</label>
                <label><input type="radio" name="bun-type" value="Lettuce"> Lettuce Wrap</label>
                <label><input type="radio" name="bun-type" value="Pretzel"> Pretzel Bun</label>
              </div>
              <br>
            </section>

            <section class="ing-group">

              <h4>Cheese:</h4>
              <div class="checkboxes">
                <label><input type="radio" name="cheese-type" value="Cheddar" checked> Cheddar</label>
                <label><input type="radio" name="cheese-type" value="American"> American</label>
                <label><input type="radio" name="cheese-type" value="Swiss"> Swiss</label>
                <label><input type="radio" name="cheese-type" value="Blue"> Blue</label>
                <label><input type="radio" name="cheese-type" value="Gouda"> Gouda</label>
                <label><input type="radio" name="cheese-type" value="Gouda"> No Cheese</label>
              </div>
            </section>

            <section class="ing-group">
              <h4>Extras:</h4>
              <div class="checkboxes">
                <label><input type="checkbox" name="ingredients" value="Lettuce"> Lettuce</label>
                <label><input type="checkbox" name="ingredients" value="Onion"> Onion</label>
                <label><input type="checkbox" name="ingredients" value="Tomato"> Tomato</label>
                <label><input type="checkbox" name="ingredients" value="Pickle"> Pickle</label>
                <label><input type="checkbox" name="ingredients" value="Bacon"> Bacon</label>
                <label><input type="checkbox" name="ingredients" value="Mushroom"> Mushroom</label>
                <label><input type="checkbox" name="ingredients" value="Pineapple"> Pineapple</label>
                <label><input type="checkbox" name="ingredients" value="Eggs"> Eggs</label>
                <label><input type="checkbox" name="ingredients" value="Avocado"> Avocado</label>
              </div>
            </section>

            <section class="ing-group">
              <h4>Sauce:</h4>
              <div class="checkboxes">
                <label><input type="checkbox" name="ingredients" value="Mayonnaise"> Mayonnaise</label>
                <label><input type="checkbox" name="ingredients" value="Ketchup"> Ketchup</label>
                <label><input type="checkbox" name="ingredients" value="Mustard"> Mustard</label>
                <label><input type="checkbox" name="ingredients" value="BBQ"> BBQ</label>
                <label><input type="checkbox" name="ingredients" value="Tzatziki"> Tzatziki</label>
                <label><input type="checkbox" name="ingredients" value="Sriracha"> Sriracha</label>
                <label><input type="checkbox" name="ingredients" value="Special"> Special</label>
              </div>
            </section>
          </div>
        </div>

        <div class="form-group">
          <h3>Devoured?</h3>
          <hr>
          <input type="radio" name="devoured" value="0" checked> Not eaten
          <input type="radio" name="devoured" value="1" > Devoured!
        </div>

        <button id="submit-btn" type="submit">Add Burger</button>
      </form>
    </div>
  </section>


  <section id="your-burgers">

    <h2>Your Burgers:</h2>

    <div id="burger-grid">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </div>
  </section>

  <section id="devoured-burgers">
  <h2>Devoured Burgers:</h2>

  <div id="burger-grid">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </div>
  </section>

<div class="parallax" id="spacer-footer"></div>

